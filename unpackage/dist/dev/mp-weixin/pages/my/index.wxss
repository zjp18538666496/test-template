/* 水平间距 */
.index .box-container {
  width: 630rpx;
  background: #FFFEFE;
  border-radius: 18px;
  padding: 30rpx 30rpx 10rpx 30rpx;
  margin: 30rpx auto 0;
}
.index .box-container .title {
  color: #1A1A1A;
  font-size: 30rpx;
  font-weight: bold;
}
.index .box-container .action-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.index .box-container .action-container .one-button {
  display: flex;
  width: 25%;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  height: 100rpx;
}
.index .box-container .action-container .one-button .button-text {
  color: #333333;
  font-size: 24rpx;
}